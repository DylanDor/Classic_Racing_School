<% @cart_items.each do |item| %>
    <li class="sm:flex items-center py-6 border-b border-slate-200">
        <div class="block mb-4 sm:mb-0 mr-5 md:w-32 xl:w-auto shrink-0" style="width: 200px; height: 142px">
            <%= image_tag item.driving_course.img_url, class: "rounded-sm" , alt: "Photo du produit" %>
        </div>
        <div class="grow">

            <h3 class="text-lg font-semibold text-white mb-1">
                <%= item.driving_course.title %>
            </h3>

            <div class="flex flex-wrap justify-between items-center">
                <!-- Rating and price -->
                <div class="flex flex-wrap items-center space-x-2 mr-2">

                    <!-- Price -->
                    <div>
                        <div
                            class="inline-flex text-sm font-medium bg-emerald-100 text-emerald-600 rounded-full text-center px-2 py-0.5">
                            <%= '%.0f' % item.driving_course.price %> â‚¬
                        </div>
                    </div>
                </div>
                    <%= form_with(url: cart_item_path(item.id), method: :delete) do |f| %>  
                        <%= f.submit "Supprimer du panier", class: "text-white text-sm underline hover:no-underline" %>
                    <% end %>
            </div>
        </div>
    </li>
<%end%>